{{!< default}}

<div class="columns is-fullheight">
    <header class="column site-header-column">
        <div class="logo-block">
            <div class="logo-column">
                <h1 class="site-title">
                    <a href="{{@site.url}}">
                    {{#if @site.logo}}
                        <img class="site-logo" src="{{img_url @site.logo size="l"}}" alt="{{@site.title}}" />
                    {{else}}
                        {{@site.title}}
                    {{/if}}
                    </a>
                </h1>
                <p class="site-description">{{@site.description}}</p>
            </div>
        </div>

        {{> "site-nav"}}

        <section class="about-this-site">
            {{meta_description}}
        </section>
    </header>
    <main class="column site-content-column">
        <div class="post-feed">
            {{#foreach posts}}

                {{> "post-card"}}

            {{/foreach}}
        </div>

        <script>
            window.max_pages = parseInt('{{pagination.pages}}');
            window.post_index = true;
        </script>
        <div class="posts-loading hidden">
            <div class="lds-ellipsis"><div></div><div></div><div></div><div></div></div>
            <p>Loading More Posts</p>
        </div>
        <noscript>
            {{pagination}}
        </noscript>
    </main>
</div>

