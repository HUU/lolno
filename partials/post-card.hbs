<article class="media post-card {{post_class}} {{#unless feature_image}}no-image{{/unless}}">


    <figure class="media-left has-mr-xl">
        <a class="post-card-image-link" href="{{url}}">
            {{#if feature_image}}
            <img class="post-card-image" src="{{img_url feature_image size="m"}}" alt="{{title}}" />
            {{else}}
            <div class="post-card-image"></div>
            {{/if}}
        </a>
    </figure>


    <div class="media-content">
        <div class="content">
            <section class="post-card-metadata">
                <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">
                    {{date format="MMMM Do YYYY"}}
                </time>
                -
                {{reading_time}}
            </section>
            <h2 class="post-card-title">
                <a class="post-card-content-link" href="{{url}}">{{title}}</a>
            </h2>
            <section class="post-card-excerpt">
                <p>{{excerpt characters="300"}}{{#unless custom_excerpt}}[...]{{/unless}}</p>
            </section>
            <section class="post-card-tags">
                {{#foreach tags}}
                    <a class="tag tag-{{slug}}" href="{{url}}">{{name}}</a>
                {{/foreach}}
            </section>
        </div>
    </div>

</article>
